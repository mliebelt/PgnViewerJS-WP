<?xml version="1.0" encoding="UTF-8"?>
<project name="chesstempoviewer" default="all">
  
  
  <property file="pgnviewerjs.zip.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <property name="skip.tests" value="true"/>
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.idea/**"/>
  </patternset>

  <!-- Modules -->
  
  
  <!-- Module ChessTempoViewer -->
  
  <dirname property="module.chesstempoviewer.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.chesstempoviewer" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="chesstempoviewer.output.dir" value="${module.chesstempoviewer.basedir}/out/production/ChessTempoViewer"/>
  <property name="chesstempoviewer.testoutput.dir" value="${module.chesstempoviewer.basedir}/out/test/ChessTempoViewer"/>
  
  <path id="chesstempoviewer.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="chesstempoviewer.module.production.classpath">
    <pathelement location="${basedir}/../../wordpress"/>
  </path>
  
  <path id="chesstempoviewer.runtime.production.module.classpath">
    <pathelement location="${chesstempoviewer.output.dir}"/>
    <pathelement location="${basedir}/../../wordpress"/>
  </path>
  
  <path id="chesstempoviewer.module.classpath">
    <pathelement location="${chesstempoviewer.output.dir}"/>
    <pathelement location="${basedir}/../../wordpress"/>
  </path>
  
  <path id="chesstempoviewer.runtime.module.classpath">
    <pathelement location="${chesstempoviewer.testoutput.dir}"/>
    <pathelement location="${chesstempoviewer.output.dir}"/>
    <pathelement location="${basedir}/../../wordpress"/>
  </path>
  
  
  <patternset id="excluded.from.module.chesstempoviewer">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.chesstempoviewer">
    <patternset refid="excluded.from.module.chesstempoviewer"/>
  </patternset>
  
  
  <target name="compile.module.chesstempoviewer" depends="compile.module.chesstempoviewer.production,compile.module.chesstempoviewer.tests" description="Compile module ChessTempoViewer"/>
  
  <target name="compile.module.chesstempoviewer.production" description="Compile module ChessTempoViewer; production classes"/>
  
  <target name="compile.module.chesstempoviewer.tests" depends="compile.module.chesstempoviewer.production" description="compile module ChessTempoViewer; test classes" unless="skip.tests"/>
  
  <target name="clean.module.chesstempoviewer" description="cleanup module">
    <delete dir="${chesstempoviewer.output.dir}"/>
    <delete dir="${chesstempoviewer.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.chesstempoviewer" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.chesstempoviewer" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>

    <target name="zip" description="Builds the zip file that may then be distributed to WordPress">
        <zip destfile="../pgnviewerjs.zip" basedir="." excludes=".idea/**, .git/**, *.iml, pgnviewerjs.zip.*"/>
    </target>
</project>